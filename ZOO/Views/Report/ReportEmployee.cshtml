@model ZOO.Controllers.ReportEmployeeViewModel

@{
    ViewBag.Title = "ReportEmployee";
}


<div class="form-group">

        @try
        {
            
                <p class="lead">    
                    <h2>
                        Last Month Report for:
                        @Html.DisplayFor(model => model.employee.FirstName)
                        @Html.DisplayFor(model => model.employee.LastName)
                    </h2>
                </p>

                <p class="lead">Cleaning jobs:</p>


                if (Model.feedings != null)
                {
                <table class="table" border="1" style="background-color:white;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.feedings.ElementAt(0).TimeForFeeding)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.feedings.ElementAt(0).FeedingDate)
                        </th>
                        <th>
                            @Html.DisplayName("Animal Groups Name")
                        </th>

                        <th>
                            @Html.DisplayName("Food Product")
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.feedings)
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeForFeeding)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FeedingDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AnimalGroups.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employees.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FoodProducts.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Feedings", new { id = item.FeedingId }, null) |
                                @Html.ActionLink("Details", "Details", "Feedings", new { id = item.FeedingId }, null) |
                                @Html.ActionLink("Delete", "Delete", "Feedings", new { id = item.FeedingId }, null)
                            </td>
                        </tr>
                    }

                </table>
                }
                }
                catch (Exception e) { }

                @try
                {

                    <p class="lead">Cleaning jobs:</p>

                    if (Model.cleanings != null)
                    {
                        <table class="table" border="1" style="background-color:white;">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.cleanings.ElementAt(0).CleaningDate)
                                </th>

                                <th>
                                    @Html.DisplayName("Pavilions Name")
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model.cleanings)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CleaningDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Pavilions.Name)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", "Cleanings", new { id = item.CleaningId }, null) |
                                        @Html.ActionLink("Details", "Details", "Cleanings", new { id = item.CleaningId }, null) |
                                        @Html.ActionLink("Delete", "Delete", "Cleanings", new { id = item.CleaningId }, null)
                                    </td>
                                </tr>
                            }

                        </table>
                    }
                }
                catch (Exception e) { }



            

