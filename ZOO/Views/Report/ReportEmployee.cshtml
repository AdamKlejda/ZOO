@model ZOO.Controllers.ReportEmployeeViewModel

@{
    ViewBag.Title = "ReportEmployee";
    Layout = "~/Views/Shared/_LayoutReports.cshtml";

}



<div class="form-group">


    @try
    {

        <br />
        <br />

        <br />
        <p class="lead">Generate for:</p>
        foreach (var person in Model.employees)
        {
            <br />
            @Html.ActionLink(person.FirstName + " " + person.LastName, "ReportEmployee", "Report", new { id = person.EmployeeId }, null)

        }

        <p class="lead">
            <h2>
                <br />
                <br />
                <br />
                Last Month Report for:
                @Html.DisplayFor(model => model.employee.FirstName)
                @Html.DisplayFor(model => model.employee.LastName)
                <br />
            </h2>
        </p>

        <p class="lead">Feeding jobs:</p>


        if (Model.feedings != null)
        {
            <table class="table" border="1" style="background-color:white;">
                <tr>
                    <th>
                        @Html.DisplayName("Time For Feeding in min")
                    </th>
                    <th>
                        @Html.DisplayName("Feeding Date")
                    </th>
                    <th>
                        @Html.DisplayName("Animal Groups Name")
                    </th>

                    <th>
                        @Html.DisplayName("Food Product")
                    </th>
                </tr>

                @foreach (var item in Model.feedings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeForFeeding)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FeedingDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnimalGroups.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FoodProducts.Name)
                        </td>

                    </tr>
                }

            </table>
        }
    }
    catch (Exception e) { }

    @try
    {

        <p class="lead">Cleaning jobs:</p>

        if (Model.cleanings != null)
        {
            <table class="table" border="1" style="background-color:white;">
                <tr>
                    <th>
                        @Html.DisplayName("Cleaning Date")
                    </th>

                    <th>
                        @Html.DisplayName("Pavilions Name")
                    </th>
                </tr>

                @foreach (var item in Model.cleanings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CleaningDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pavilions.Name)
                        </td>

                    </tr>
                }

            </table>
        }
    }
    catch (Exception e) { }





