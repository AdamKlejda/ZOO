@model IEnumerable<ZOO.Models.Pavilions>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pavillions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="background-color:white;">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surface)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surface)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.PavilionId }) |
            @Html.ActionLink("Details", "Details", new { id = item.PavilionId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.PavilionId })
        </td>
    </tr>
}

</table>
